<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="readingDesc"
            type="com.techtap.ReadingDesc" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="reportListener"
            type="com.techtap.ReportListAdapter.ReportListener" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_limited"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/rc_vital_list_item_bg"
        android:padding="@dimen/dp_1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_this_is_limited_scan"
            style="@style/TextViewStyleRegular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/this_is_a_limited_scan_result"
            android:textSize="@dimen/sp_12"
            android:layout_margin="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>